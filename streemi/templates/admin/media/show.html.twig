{% extends 'base.html.twig' %}

{% block title %}Media{% endblock %}

{% block body %}
    <h1>Media</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medium.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ medium.title }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ medium.shortDescription }}</td>
            </tr>
            <tr>
                <th>LongDescription</th>
                <td>{{ medium.longDescription }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ medium.releaseDate ? medium.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>CoverImage</th>
                <td>{{ medium.coverImage }}</td>
            </tr>
            <tr>
                <th>Staff</th>
                <td>{{ medium.staff ? medium.staff|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Casting</th>
                <td>{{ medium.casting ? medium.casting|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_media_index') }}">back to list</a>

    <a href="{{ path('app_admin_media_edit', {'id': medium.id}) }}">edit</a>

    {{ include('admin/media/_delete_form.html.twig') }}
{% endblock %}
