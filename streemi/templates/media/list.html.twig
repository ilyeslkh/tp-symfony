{% extends 'base.html.twig' %}

{% block title %}Media List{% endblock %}

{% block content %}
<h1>All Media</h1>
<div class="media-grid">
    {% for media in medias %}
        <div class="media-card">
            <img src="{{ media.coverImage }}" alt="{{ media.title }}">
            <h2>{{ media.title }}</h2>
            <p>{{ media.shortDescription }}</p>
            <p>Release Date: {{ media.releaseDate|date('Y-m-d') }}</p>
            <a href="{{ path('media_detail', { id: media.id }) }}">View Details</a>
        </div>
    {% else %}
        <p>No media available.</p>
    {% endfor %}
</div>
{% endblock %}
