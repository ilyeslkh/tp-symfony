{% extends 'base.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block content %}
<h1>Search Results for "{{ keyword }}"</h1>
<div class="media-grid">
    {% if medias is not empty %}
        {% for media in medias %}
            <div class="media-card">
                <img src="{{ media.coverImage }}" alt="{{ media.title }}">
                <h2>{{ media.title }}</h2>
                <p>{{ media.shortDescription }}</p>
                <a href="{{ path('media_detail', { id: media.id }) }}">View Details</a>
            </div>
        {% endfor %}
    {% else %}
        <p>No media found for "{{ keyword }}".</p>
    {% endif %}
</div>
<form action="{{ path('media_search') }}" method="get">
    <input type="text" name="q" placeholder="Search media" value="{{ keyword }}">
    <button type="submit">Search</button>
</form>
{% endblock %}
